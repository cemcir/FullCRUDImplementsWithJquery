
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0
        }

        body {
            background-color: #f5683d;
            padding-top: 30vh;
        }

        .form-container {
            width: 250px;
            height: auto;
            padding: 50px 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px #000;
            margin: auto;
            position: relative;
        }

        .user-img {
            width: 90px;
            height: 90px;
            background-size: 100%;
            position: absolute;
            top: -40px;
            left: 110px;
            border-radius: 50%;
        }

        ul.list {
            list-style-type: none;
            text-align: center;
        }

        ul.list li {
            width: 250px;
            margin-bottom: 15px;
        }

        ul.list li input {
            width: 250px;
            text-align: center;
            padding: 8px 0px;
            border: none;
            background-color: #d3d3d3;
            border-radius: 5px;
        }

        ul.list li button {
            width: 250px;
            text-align: center;
            padding: 8px 0px;
            border: none;
            background-color: #4690fb;
            color: #fff;
            border-radius: 5px;
        }

        ul.list li:nth-child(5) {
            color: red;
        }
    </style>
    <script src="~/js/Logins/index.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
    </script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div class="form-container">
        <div>
            <img class="user-img" alt="avatar" src="~/images/login.png" />
        </div>
        <ul class="list">
            <li><h2>Üye Girişi</h2></li>
            <li>
                <input type="text" id="UserName" placeholder="Kullanıcı Adı" />
            </li>
            <li>
                <input type="password" id="Password" placeholder="........." />
            </li>
            <li>
                <button type="button" onclick="login()">
                    Giriş Yap
                </button>
            </li>
            <li>Şifremi Unuttum</li>
        </ul>
        <div style="color:red" id="errormessage"></div>
    </div>
</body>
</html>
